{
  "name": "copyfy",
  "version": "1.2.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build --prefix frontend",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.app.copyfy",
    "productName": "CopyFy++",
    "icon": "build/icon",
    "publish": [
      {
        "provider": "github",
        "owner": "saidmix01",
        "repo": "clipboard",
        "private": false
      }
    ],
    "files": [
      "frontend/dist/**/*",
      "main.js",
      "db.js",
      "preload.js",
      "config.js",
      "helpers/**/*",
      "package.json",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "asarUnpack": [
      "helpers/paste.exe",
      "helpers/paste-image.exe",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Clipboard manager con sincronizaci√≥n y atajos, empaquetado para Electron",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "node-gyp": "^11.2.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "sql.js": "^1.11.0"
  }
}
