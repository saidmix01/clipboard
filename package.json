{
  "name": "copyfy",
  "version": "1.2.1",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build --prefix frontend",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "SAIDMIX.CopyFy",
    "productName": "CopyFy++",
    "icon": "build/icon",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "appx": {
      "identityName": "SAIDMIX.CopyFy",
      "publisher": "CN=7F54C210-7D42-4E3E-AEB0-BA23C7B9DAAC",
      "displayName": "CopyFy++",
      "backgroundColor": "#464646"
    },
    "buildVersion": "1.2.1.0",
    "publish": [
      {
        "provider": "github",
        "owner": "saidmix01",
        "repo": "clipboard",
        "private": false
      }
    ],
    "files": [
      "frontend/dist/**/*",
      "main.js",
      "db.js",
      "preload.js",
      "config.js",
      "viewer/**/*",
      "public/**/*",
      "helpers/**/*",
      "package.json",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "asarUnpack": [
      "helpers/paste.exe",
      "helpers/paste-image.exe",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "appx"
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png",
      "executableName": "copyfy",
      "synopsis": "CopyFy++ Clipboard manager",
      "desktop": {
        "entry": {
          "Categories": "Utility;"
        }
      }
    }
  },
  "keywords": [],
  "author": "Said Andres Avendaño",
  "license": "ISC",
  "description": "Clipboard manager con sincronización y atajos, empaquetado para Electron",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "node-gyp": "^11.2.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "sql.js": "^1.11.0"
  }
}
